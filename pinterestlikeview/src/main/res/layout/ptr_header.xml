<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ptr_headerContainer" >

    <RelativeLayout
        android:id="@+id/ptr_id_header"
        style="@style/ptr_header"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" >

        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/ptr_id_image"
            style="@style/ptr_arrow"
            android:layout_gravity="center"
            android:contentDescription="@string/ptr_refreshing"
            android:src="@drawable/refresh_arrow" />

        <ProgressBar
            android:id="@+id/ptr_id_spinner"
            style="@style/ptr_spinner"
            android:layout_gravity="center" />
        
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ptr_id_textwrapper"
            style="@style/ptr_textwrapper" >

            <TextView
                android:id="@+id/ptr_id_text"
                style="@style/ptr_text" />

            <TextView
                android:id="@+id/ptr_id_last_updated"
                style="@style/ptr_last_updated" />
        </LinearLayout>

        

    </RelativeLayout>

</LinearLayout>